{% extends 'base.html.twig' %}

{% block body %}
    <h1>Search</h1>
	<div class="well well-lg">
		{{ form_start(form) }}
			<div class="form-group">
	    		{{ form_label(form.title) }}
	    		{{ form_errors(form.title) }}
	    		{{ form_widget(form.title) }}
			</div>
			<div class="form-group">
	    		{{ form_label(form.year) }}
	    		{{ form_errors(form.year) }}
	    		{{ form_widget(form.year) }}
			</div>
			<div class="form-group">
	    		{{ form_label(form.search_movies) }}
	    		{{ form_widget(form.search_movies) }}
			</div>
		{{ form_end(form) }}
	</div>
	{% if result %}
	    {% for row in result.Search|batch(4) %}
			<div class="row">
			{% for movie in row %}
			    <div class="col-md-3">
						<div class="img-add-box">
							<img class="img-poster" src="{{ movie.Poster == 'N/A' ? asset('assets/img/NA.png') : movie.Poster }}">
							<form class="add-movie-form" action="{{ path('add_movie') }}" method="POST">
							   <input type="hidden" name="imdbID" value="{{movie.imdbID}}"><br />
							   <button id="img-add-box-save" type="submit" name="submit">+</button>
							</form>
						</div>
						<h5>{{ movie.Title }} ({{ movie.Year }})</h5>
			    </div>
			{% endfor %}
			</div>
	    {% endfor %}
	{% endif %}
{% endblock %}
